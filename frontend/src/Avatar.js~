 const Avatar = ({userId,username}) => {

 const colors = ['bg-red-200','bg-green-200','bg-purple-200','bg-blue-200','bg-yellow-200','bg-teal-200'];

 const userIdBase10 = parseInt(userId,20);
 console.log("User id:",userId);
 console.log("User name:",username);
 console.log("base 10:",userIdBase10);
 const colorIndex = userIdBase10 % colors.length;
 console.log("Color Index:",colorIndex);
 const color = colors[colorIndex];
 console.log(color);

 return(
 <>
  <div className={'w-9 h-9 rounded-full flex items-center '+color}>
        <div className='text-center w-full opacity-80'>{username[0]}</div>
  </div>
 </>
 )
}

export default Avatar